@model IEnumerable<crudcore.Model.Book>

@{
    Layout = "_Layout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    BookName
                </th>
                <th>
                    ImagePath
                </th>
                <th>
                    PublishDate
                </th>
                <th>
                    availability
                </th>
                <th>
                    publication
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookName)
                    </td>
                    <td>
                        <img src="~/uploads/@item.ImagePath" width="50" height="50" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.availability)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublicationID_FK)
                    </td>
                    <td>
                        <a asp-action="Edit" class="badge-dark" asp-route-id="@item.BookID">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.BookID">Details</a> |*@
                        <a asp-action="Delete" class="btn-warning" asp-route-id="@item.BookID">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</body>
</html> 