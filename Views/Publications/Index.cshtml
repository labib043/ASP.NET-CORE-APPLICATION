
@model IEnumerable<crudcore.Model.Publication>

@{
    Layout = "_Layout";
}


<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create" asp-controller="Publications" class="btn btn-primary"> Create </a>

        <a asp-action="Index" asp-controller="Books" class="btn btn-info"> Go to Index of Book </a>


    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PublicationName)
                </th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublicationName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PublicationID" class="btn btn-warning">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.PublicationID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>

</body>
</html>
